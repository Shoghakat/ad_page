head
    style.
        h1 {
            color: DarkCyan;
            text-align: center;
        }
        span {
            position: absolute;
            right: 100px;
            font-size: 15pt;
        }
        img {
            height: 90px;
            padding-top: 5px;
            padding-right: 5px;
            border-radius: 50%;
        }
        .hover {
            color: grey;
        }
        .hover:hover {
            color: DodgerBlue;
        }
        .parentDiv1 {
            display: inline-block;
            vertical-align: top;
            text-align: left;
            margin-left: 50pt;
            margin-right: 50pt;
        }
        .parentDiv2 {
            display: inline-block;
            vertical-align: top;
            margin-left: 50pt;
            margin-right: 50pt;
        }
        .childDiv1 {
            margin-bottom: 20px
        }
        .childDiv {
            margin-bottom: 5px
        }
        ul {
            list-style-type: none;
            text-align: left;
        }
        p {
            color: Maroon;
        }
    title= account
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous")

body(style="text-align:center;")
    h1 My Account
        span
            - if(user.image)
                img(src=`/uploads/${user.image}` alt="Image")
            - else
                img(src='/uploads/profile.jpeg')
            a.hover(href='/test/profile') #{user.name}

    div
        a(href='/test/logout') Logout

    hr

    - if(messages.success_msg)
        p= messages.success_msg
    - if(messages.error)
        p= messages.error
    - if(errors !== undefined)
        p= errors.message

    div.parentDiv1
        div.childDiv1
            a(href='/test/ad' class="btn btn-success" style="font-size:20px") Post an ad
        - if(user.isAdmin)
            div.childDiv
                a(href='/test/add/category') Add a new category
            div.childDiv
                a(href='/test/add/subcategory') Add a new subcategory
            div.childDiv
                a(href='/test/delete/category') Delete a category
            div.childDiv
                a(href='/test/delete/subcategory') Delete a subcategory

    div.parentDiv2 My ads
        hr
        - if(ads.length > 0)
            ul
                each el in ads
                    li
                        a(href=`/test/item/${el.id}` class="btn" style="color:DarkCyan") #{el.title}
        - if(ads.length === 0)
            div
                i No ads posted yet