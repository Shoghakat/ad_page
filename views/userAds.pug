head
    style.
        h1 {
            text-align: center;
            color: DarkCyan;
        }
        .hover {
            color: grey;
        }
        .hover:hover {
            color: DodgerBlue;
        }
        #profileSpan {
            position: absolute;
            right: 100px;
            font-size: 15pt;
        }
        #profileImg {
            height: 90px;
            padding-top: 5px;
            padding-right: 5px;
            border-radius: 50%;
        }
        nav {
            text-align:center;
        }
        .firstDiv {
            margin-bottom: 20px;
            font-size: 15pt
        }
        .parentDiv {
            margin: auto;
            border-style: outset;
            height: 180px;
            width: 700px;
            margin-bottom: 10px;
            padding: 10px;
            text-align: left
        }
        .childDiv {
            display: inline-block;
            vertical-align: top;
            width: 320px
        }
        i {
            text-align: center
        }
    title= userAds
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous")

body(style="text-align: center")
    - if(user)
        h1 My Account
            span#profileSpan
                - if(user.image)
                    img#profileImg(src=`/uploads/profile/${user.image}` alt="Image")
                - else
                    img#profileImg(src='/uploads/profile/profile.jpeg')
                a.hover(href='/profile') #{user.name}

        nav
            a(href='/logout' style="margin-right: 20px") Logout
            - if(user.id === owner.id)
                a(href='/account' style="margin-left: 20px") Account
            - else
                a(href='/user/messages' style="margin-left: 20px") Back

    - else
        h1 Advertisements Page
        nav
            a(href='/login' style="margin-right: 20px") Log in
            a(href=`/subcategory/${ad.categoryId}` style="margin-left: 20px") Back

    hr

    div.firstDiv Ads by #{owner.name}

    - if(ads[0].id)
        each el in ads
            div.parentDiv
                div.childDiv
                    - if(el.imgId)
                        img(src=`/uploads/ads/${el.filename}` alt="Image" height="150")
                    - else 
                        img(src='/uploads/ads/default.jpeg' alt="Image" height="150")
                div.childDiv
                    a(href=`/item/${el.id}` style="font-size:15pt") #{el.title}
    - else
        p No ads are available by #{owner.name}