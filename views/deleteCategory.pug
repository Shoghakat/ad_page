head
    style.
        h1 {
            color: DarkCyan;
        }
        span {
            position: absolute;
            right: 100px;
            font-size: 15pt;
        }
        img {
            height: 90px;
            padding-top: 5px;
            padding-right: 5px;
            border-radius: 50%;
        }
        div {
            margin-bottom: 10px
        }
        form {
            text-align: right;
            margin-left: 205pt;
            width: 600px;
        }
        label {
            margin-right: 10px;
        }
        input, select {
            width: 220px;
            height: 30px;
        }
        .hover {
            color: grey;
        }
        .hover:hover {
            color: DodgerBlue;
        }
        p {
            color: Maroon;
        }
    title= deleteCategory
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous")

body(style="text-align:center;")
    h1 My Account
        span
            - if(user.image)
                img(src=`/uploads/${user.image}` alt="Image")
            - else
                img(src='/uploads/profile.jpeg')
            a.hover(href='/profile') #{user.name}
    
    nav
        a(href='/logout' style="margin-right: 20px") Logout
        a(href='/account' style="margin-left: 20px") Back
        
    hr

    - if(messages.error_msg)
        p= messages.error_msg
    - if(messages.error)
        p= messages.error
    - if(errors !== undefined)
        p= errors.message

    form(action='/delete/category' method='POST')
        div
            label Select the Category
            select(id="name" name="name")
                each el in categs
                    option(value=`${el.name}`) #{el.name}
        div
            input(type='submit' value='Delete' style="margin-top: 20px;")