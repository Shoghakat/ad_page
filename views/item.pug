head
    style.
        h1 {
            text-align: center;
            color: DarkCyan;
        }
        #profileSpan {
            position: absolute;
            right: 100px;
            font-size: 15pt;
        }
        #profileImg {
            height: 90px;
            padding-top: 5px;
            padding-right: 5px;
            border-radius: 50%;
        }
        nav {
            text-align:center;
        }
        p {
            margin-left: 20px;
            font-size: 10pt;
        }
        strong {
            font-size: 20pt;
        }
        span {
            margin-left: 10px;
            font-size: 10pt;
        }
        div {
            display: inline-block;
            vertical-align: top;
            margin-left: 10pt;
            margin-right: 10pt;
            margin-bottom: 10px
        }
        ul {
            list-style-type: none;
            text-align: center;
        }
        .hover {
            color: grey;
        }
        .hover:hover {
            color: DodgerBlue;
        }
    title= item
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous")

body
    - if(user)
        h1 My Account
            span#profileSpan
                - if(user.image)
                    img#profileImg(src=`/uploads/${user.image}` alt="Image")
                - else
                    img#profileImg(src='/uploads/profile.jpeg')
                a.hover(href='/test/profile') #{user.name}

        nav
            a(href='/test/logout' style="margin-right: 20px") Logout
            a(href='/test/account' style="margin-left: 20px") Back
    - else
        h1 Advertisement Page
        nav
            a(href='/test/login' style="margin-right: 20px") Log in
            a(href=`/test/subcategory/${ad.categoryId}` style="margin-left: 20px") Back

    hr
    
    div
        - if(ad.image)
            img(src=`/uploads/${ad.image[0]}` alt="Image" height="400")
        - else
            img(src='/uploads/default.jpeg' alt="Image" height="400")

    div
        ul
            li
                -if(image)
                    img(src=`/uploads/${image}` style="height: 90px; padding-top: 5px; padding-right: 5px; border-radius: 50%;")
                - else
                    img(src='/uploads/profile.jpeg' style="height: 90px; padding-top: 5px; padding-right: 5px; border-radius: 50%;")
            
            li(style="font-size: 15pt;") #{ad.name}
            li(style="color: DarkCyan;") #{ad.phone_number}
            - if(user)
                li(style="margin-top: 50px;")
                    a(href=`/test/edit/${ad.id}` class="btn btn-success" style="font-size:20px") Edit
                li(style="margin-top: 15pt;")
                    a(href=`/test/delete/ad/${ad.id}` class="btn btn-success" style="font-size:20px") Delete

    p
        - if(ad.image && ad.image.length > 1)
            a(href=`/test/item/${ad.id}/images`) See more pictures

    p
        strong= ad.title

    p= ad.location

    p= ad.description

