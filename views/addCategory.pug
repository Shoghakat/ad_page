head
    style.
        h1 {
            color: DarkCyan;
        }
        span {
            position: absolute;
            right: 100px;
            font-size: 15pt;
        }
        img {
            height: 90px;
            padding-top: 5px;
            padding-right: 5px;
            border-radius: 50%;
        }
        form {
            text-align: right;
            margin-left: 205pt;
            width: 600px;
        }
        label {
            margin-right: 10px;
        }
        input {
            width: 220px;
            height: 30px
        }
        .hover {
            color: grey;
        }
        .hover:hover {
            color: DodgerBlue;
        }
        p {
            color: Maroon;
        }
    title= addCategory
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous")

body(style="text-align:center;")
    h1 My Account
        span
            - if(user.image)
                img(src=`/uploads/${user.image}` alt="Image")
            - else
                img(src='/uploads/profile.jpeg')
            a.hover(href='/test/profile') #{user.name}
    
    nav
        a(href='/test/logout' style="margin-right: 20px") Logout
        a(href='/test/account' style="margin-left: 20px") Back
        
    hr

    - if(messages.error_msg)
        p= messages.error_msg
    - if(messages.error)
        p= messages.error
    - if(errors !== undefined)
        p= errors.message

    form(action='/test/add/category' method='POST')
        div
            label Category Name
            input(type='text' id='name' name='name')
        div
            input#button(type='submit' value='Add' style="margin-top: 20px;")