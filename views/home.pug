head
    style.
        h1 {
            color: DarkCyan
        }
        span {
            position: absolute;
            right: 100px;
            font-size: 15pt;
        }
        img {
            height: 90px;
            padding-top: 5px;
            padding-right: 5px;
            border-radius: 50%;
        }
        div {
            display: inline-block;
            vertical-align: top;
            margin-left: 50pt;
            margin-right: 50pt;
        }
        ul {
            list-style-type: none;
            text-align: left;
        }
    title= home
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous")

body(style="text-align:center;")
    - if(user)
        h1 Home Page
            span
                - if(user.image)
                    img(src=`/uploads/profile/${user.image}` alt="Image")
                - else
                    img(src='/uploads/profile/profile.jpeg')
                a.hover(href='/profile') #{user.name}

        nav
            a(href='/account') Account

    - else
        h1 Home Page
        div
            a(href='/login') Log in

    hr

    each val in parentCategs
        div
            a(href=`/category/${val.id}` class="btn" style="font-size:20px") #{val.name}
            hr
            ul
                each el in subCategs
                    - if(el.parentId === val.id)
                        li
                            a(href=`/subcategory/${el.id}` class="btn") #{el.name}