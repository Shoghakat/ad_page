head
    style.
        h1 {
            color: DarkCyan;
        }
        span {
            position: absolute;
            right: 100px;
            font-size: 15pt;
        }
        img {
            height: 90px;
            padding-top: 5px;
            padding-right: 5px;
            border-radius: 50%;
        }
        p {
            color: Maroon;
        }
        ul {
            list-style-type: none;
        }
        #parentDiv {
            width: 600px;
            margin-left: 380pt;
            margin-bottom: 30px
        }
        .leftDiv {
            display: inline-block;
            text-align: right;
            padding-top: 7px;
            width: 200px;
            vertical-align: top;
        }
        .rightDiv {
            display: inline-block;
            text-align: left;
            width: 300px;
            vertical-align: top;
        }
        .add {
            width: 200px;
            margin: 5px;
            font-size: 20px;
        }
        .hover {
            color: grey;
        }
        .hover:hover {
            color: DodgerBlue;
        }
    title= ad
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous")

body(style="text-align:center;")
    h1 My Account
        span
            - if(user.image)
                img(src=`/uploads/profile/${user.image}` alt="Image")
            - else
                img(src='/uploads/profile/profile.jpeg')
            a.hover(href='/profile') #{user.name}
    
    nav
        a(href='/logout' style="margin-right: 20px") Logout
        a(href='/account' style="margin-left: 20px") Back
        
    hr

    - if(messages.success_msg)
        p= messages.success_msg
    - if(messages.error_msg)
        p= messages.error_msg
    - if(messages.error)
        p= messages.error

    div
        strong Select a category
        
    
    div#parentDiv
        each val in parentCategs
            div.leftDiv
                - if(user.isAdmin)
                    a(href=`/delete/category/${val.id}` style="vertical-align: top; margin-right: 10px") Delete
                i #{val.name}
            div.rightDiv
                ul
                    each el in subCategs
                        - if(el.parentId === val.id)
                            li
                                a(href=`/ad/${el.id}` class="btn") #{el.name}
                                - if(user.isAdmin)
                                    a(href=`/delete/category/${el.id}` style="margin-left: 10px") Delete

    - if(user.isAdmin)
        a(href='/add/category') Add a new category