head
    style.
        h1 {
            text-align: center;
            color: DarkCyan;
        }
        span {
            position: absolute;
            right: 100px;
            font-size: 15pt;
        }
        .hover {
            color: grey;
        }
        .hover:hover {
            color: DodgerBlue;
        }
        #profileImg {
            height: 90px;
            padding-top: 5px;
            padding-right: 5px;
            border-radius: 50%;
        }
        #profile {
            height: 90px;
            padding-top: 5px;
            padding-right: 5px;
            border-radius: 50%;
        }
        nav {
            text-align: center;
        }
        .adImage {
            margin: 10px
        }
    title= images
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous")

body
    - if(user)
        h1 My Account
            span
                - if(user.image)
                    img#profileImg(src=`/uploads/${user.image}` alt="Image")
                - else
                    img#profileImg(src='/uploads/profile.jpeg')
                a.hover(href='/test/profile') #{user.name}

        nav
            a(href='/test/logout' style="margin-right: 20px") Logout
            a(href=`/test/item/${ad.id}` style="margin-left: 20px") Back
    - else
        h1 Advertisement Page
        nav
            a(href='/test/login' style="margin-right: 20px") Log in
            a(href=`/test/item/${ad.id}` style="margin-left: 20px") Back

    hr

    each el in ad.image
        img.adImage(src=`/uploads/${el}` alt="Image" height="400")