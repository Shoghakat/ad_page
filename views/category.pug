head
    style.
        h1 {
            color: DarkCyan
        }
        .profileSpan {
            position: absolute;
            right: 100px;
            font-size: 15pt;
        }
        .profileImg {
            height: 90px;
            padding-top: 5px;
            padding-right: 5px;
            border-radius: 50%;
        }
        .parentDiv {
            margin: auto;
            border-style: outset;
            height: 180px;
            width: 700px;
            margin-bottom: 10px;
            padding: 10px;
            text-align: left
        }
        .childDiv {
            display: inline-block;
            vertical-align: top;
            width: 320px
        }
    title= category
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous")

body(style="text-align:center;")
    h1= categ.name
        - if(user)
            span.profileSpan
                - if(user.image)
                    img.profileImg(src=`/uploads/profile/${user.image}` alt="Image")
                - else
                    img.profileImg(src='/uploads/profile/profile.jpeg')
                a.hover(href='/profile') #{user.name}

    - if(user)
        nav
            a(href='/account' style="margin-right: 20px") Account
            a(href='/home' style="margin-left: 20px") Back

    - else
        nav
            a(href='/login' style="margin-right: 20px") Log in
            a(href='/home' style="margin-left: 20px") Back

    hr
    
    
    - if(ads.length > 0)
        each el in ads
            div.parentDiv
                div.childDiv
                    - if(el.imgId)
                        img(src=`/uploads/ads/${el.filename}` alt="Image" height="150")
                    - else 
                        img(src='/uploads/ads/default.jpeg' alt="Image" height="150")
                div.childDiv
                    a(href=`/item/${el.adId}` style="font-size:15pt") #{el.adTitle}
    - else
        p
            i No ads are available in this category