head
    style.
        h1 {
            color: DarkCyan;
        }
        span {
            position: absolute;
            right: 100px;
            font-size: 15pt;
        }
        img {
            height: 90px;
            padding-top: 5px;
            padding-right: 5px;
            border-radius: 50%;
        }
        .hover {
            color: grey;
        }
        .hover:hover {
            color: DodgerBlue;
        }
        ul {
            list-style-type: none;
            text-align: left;
        }
        form {
            text-align: left;
            margin-left: 400pt
        }
        input {
            width: 500px;
        }
        label {
            margin-top: 10px;
        }
        strong {
            margin-right: 10px;
        }
        p {
            color: Maroon;
        }
    title= delete Ad
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous")

body(style="text-align:center;")
    h1 My Account
        span
            - if(user.image)
                img(src=`/uploads/profile/${user.image}` alt="Image")
            - else
                img(src='/uploads/profile/profile.jpeg')
            a.hover(href='/profile') #{user.name}

    nav
        a(href='/logout' style="margin-right: 20px") Logout
        a(href=`/item/${ad.id}` style="margin-left: 20px") Back

    hr

    - if(messages.error_msg)
        p= messages.error_msg
    - if(messages.error)
        p= messages.error

    form(action=`/delete/ad/${ad.id}` method='POST')
        div 
            input(type='submit' value='Delete the ad' style="margin-top: 20px;")