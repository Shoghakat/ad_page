head
    style.
        h1 {
            color: DarkCyan;
        }
        .hover {
            color: grey;
        }
        .hover:hover {
            color: DodgerBlue;
        }
        #profileSpan {
            position: absolute;
            right: 100px;
            font-size: 15pt;
        }
        #profileImg {
            height: 90px;
            padding-top: 5px;
            padding-right: 5px;
            border-radius: 50%;
        }
        p {
            color: Maroon;
        }
        form {
            text-align: left;
            margin-left: 300pt;
            width: 800px;
        }
        div {
            margin-bottom: 10px;
        }
        input, select {
            width: 400px;
            height: 30px
        }
        textarea {
            width: 400px;
            height: 100px;
            vertical-align: top
        }
        label {
            width: 150px;
            text-align: right;
            margin-right: 15px;
        }
        #button {
            margin-left: 165px;
            width: 150px
        }
        .imgDiv {
            display: inline-block;
            height: 100px
        }
        .adImages {
            height: 90px;
            margin-right: 10px
        }
    title= edit
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous")

body(style="text-align:center;")
    h1 My Account
        span#profileSpan
            - if(user.image)
                img#profileImg(src=`/uploads/${user.image}` alt="Image")
            - else
                img#profileImg(src='/uploads/profile.jpeg')
            a.hover(href='/test/profile') #{user.name}

    nav
        a(href='/test/logout' style="margin-right: 20px") Logout
        a(href=`/test/item/${ad.id}` style="margin-left: 20px") Back

    hr

    - if(messages.error_msg)
        p= messages.error_msg
    - if(messages.error)
        p= messages.error
    - if(errors !== undefined)
        p= errors.message

    form(action=`/test/edit/${ad.id}` method='POST' encType="multipart/form-data")
        div
            label Location
            select(id="location" name="location")
                option(value=`${ad.location}`) #{ad.location}
                option(value="Aragatsotn") Aragatsotn
                option(value="Ararat") Ararat
                option(value="Armavir") Armavir
                option(value="Republic of Artsakh") Republic of Artsakh
                option(value="Gegharkunik") Gegharkunik
                option(value="Kotayk") Kotayk
                option(value="Lori") Lori
                option(value="Shirak") Shirak
                option(value="Syunik") Syunik
                option(value="Tavush") Tavush
                option(value="Vayots Dzor") Vayots Dzor
                option(value="Yerevan") Yerevan
        div
            label Title
            input(type='text' id='title' name='title' value=`${ad.title}`)
        div
            label Description
            textarea(id='description' name='description') #{ad.description}
        
        - if(ad.image)
            div
                label Images
                div.imgDiv
                    each img in ad.image
                        img.adImages(src=`/uploads/${img}`)
            div
                label Delete the images
                select(id="delete" name="delete")
                    option(value="false") false
                    option(value="true") true
        div
            label Add image(s)
            input(type="file" id="image" name="image" accept="image/*" multiple)
        div
            label Phone Number
            input(type='text' id='phone_number' name='phone_number' value=`${ad.phone_number}`)
        div
            label Name
            input(type='text' id='name' name='name' value=`${ad.name}`)
        div
            input#button(type='submit' value='Save Changes' style="margin-top: 20px;")