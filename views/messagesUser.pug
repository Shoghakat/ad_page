head
    style.
        h1 {
            text-align: center;
            color: DarkCyan;
        }
        span {
            position: absolute;
            right: 100px;
            font-size: 15pt;
        }
        img {
            height: 90px;
            padding-top: 5px;
            padding-right: 5px;
            border-radius: 50%;
        }
        nav {
            text-align: center;
        }
        .hover {
            color: grey;
        }
        .hover:hover {
            color: DodgerBlue;
        }
        i {
            margin-left: 10px
        }
    title= messagesUser
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous")

body(style="text-align:center;")
    h1 Message by #{message.name}
        span
            - if(user.image)
                img(src=`/uploads/${user.image}` alt="Image")
            - else
                img(src='/uploads/profile.jpeg')
                a.hover(href='/test/profile') #{user.name}

    nav
        a(href='/test/logout' style="margin-right: 20px") Logout
        a(href=`/test/item/${message.adId}` style="margin-left: 20px") Back

    hr

    div Email:
            i #{message.email}
    br
    div #{message.message}