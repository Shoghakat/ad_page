head
    style.
        h1 {
            text-align: center;
            color: DarkCyan;
        }
        #profileSpan {
            position: absolute;
            right: 100px;
            font-size: 15pt;
        }
        img {
            height: 90px;
            padding-top: 5px;
            padding-right: 5px;
            border-radius: 50%;
        }
        nav {
            text-align: center;
        }
        .hover {
            color: grey;
        }
        .hover:hover {
            color: DodgerBlue;
        }
        .parentDiv {
            width: 360px;
            margin-left: 460pt;
            text-align: left
        }
        .childDiv {
            margin-bottom: 10px;
        }
        .nameLabel {
            width: 110px;
        }
        .adLabel {
            width: 180px;
            text-align: left
        }
        ul {
            list-style-type: none;
            text-align: left;
        }
        p {
            color: Maroon;
        }
    title= messagesUser
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous")

body(style="text-align:center;")
    h1 Messages
        span#profileSpan
            - if(user.image)
                img(src=`/uploads/profile/${user.image}` alt="Image")
            - else
                img(src='/uploads/profile/profile.jpeg')
            a.hover(href='/profile') #{user.name}

    nav
        a(href='/logout' style="margin-right: 20px") Logout
        a(href=`/account` style="margin-left: 20px") Account

    hr

    - if(messages.success_msg)
        p= messages.success_msg
    - if(messages.error)
        p= messages.error

    div.parentDiv
        div.childDiv
            label.nameLabel Message by
            label.adLabel Message for ad
            hr
        - if(messagesUser.length > 0)
            each el in messagesUser
                div.childDiv
                    - if(el.userId === user.id)
                        label.nameLabel me
                    - else
                        label.nameLabel
                            a(href=`/user/ads/${el.userId}`) #{el.userName}

                    label.adLabel
                        a(href=`/item/${el.adId}`) #{el.adTitle}
                    label.readLabel
                        a(href=`/user/messages/${el.id}` class="btn btn-success" style="text-align: right") Read
                    hr
        - else
            div(style="text-align: center")
                i Empty