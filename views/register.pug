head
    style.
        h1 {
            color: DarkCyan
        }
        ul {
            list-style-type: none;
            text-align: left;
        }
        div {
            margin-bottom: 10px;
        }
        p {
            color: Maroon;
        }
        form {
            text-align: right;
            margin-left: 210pt;
            width: 600px;
        }
        input, select {
            width: 220px;
            height: 30px
        }
        label {
            margin-right: 15px;
        }
        .required:before {
            content: "*";
            color: red;
            vertical-align: top;
            margin-right: 5px;
        }
    title= register
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous")

body(style="text-align:center;")
    h1 Register Page

    a(href='/test/home') Home

    hr

    - if(messages.error_msg)
        p= messages.error_msg
    - if(messages.error)
        p= messages.error
    - if(errors !== undefined)
        p= errors.message

    form(action='/test/register' method='POST')
        div.required
            input(type='email' id='email' name='email' placeholder='Email')
        div.required
            input(type='text' id='name' name='name' placeholder='Name')
        div.required
            input(type='password' id='password' name='password' placeholder='Password')
        div.required
            input(type='password' id='password2' name='password2' placeholder='Confirm Password')
        div
            label Phone Number
            input(type='text' id='phone_number' name='phone_number' placeholder='(099)99-99-99')
        div
            label Choose a location
            select(id="location" name="location")
                option(value="")
                option(value="Aragatsotn") Aragatsotn
                option(value="Ararat") Ararat
                option(value="Armavir") Armavir
                option(value="Republic of Artsakh") Republic of Artsakh
                option(value="Gegharkunik") Gegharkunik
                option(value="Kotayk") Kotayk
                option(value="Lori") Lori
                option(value="Shirak") Shirak
                option(value="Syunik") Syunik
                option(value="Tavush") Tavush
                option(value="Vayots Dzor") Vayots Dzor
                option(value="Yerevan") Yerevan
        div
            input(type='submit' value='Register')