head
    style.
        h1 {
            text-align: center;
            color: DarkCyan;
        }
        span {
            position: absolute;
            right: 100px;
            font-size: 15pt;
        }
        img {
            height: 90px;
            padding-top: 5px;
            padding-right: 5px;
            border-radius: 50%;
        }
        nav {
            text-align:center;
        }
        .hover {
            color: grey;
        }
        .hover:hover {
            color: DodgerBlue;
        }
    title= error
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous")

body(style="text-align:center;")
    - if(user)
        h1 Error
            span
                - if(user.image)
                    img(src=`/uploads/${user.image}` alt="Image")
                - else
                    img(src='/uploads/profile.jpeg')
                a.hover(href='/test/profile') #{user.name}

        nav
            a(href='/test/logout' style="margin-right: 20px") Logout
            a(href='/test/account' style="margin-left: 20px") Account

    - else
        h1 Error
        nav
            a(href='/test/login' style="margin-right: 20px") Log in
            a(href='/test/home' style="margin-left: 20px") Home

    hr

    -if(err)
        h2= err