head
    style.
        h1 {
            color: DarkCyan;
        }
        span {
            font-size: 15pt;
        }
        ul {
            list-style-type: none;
            text-align: left;
        }
        form {
            text-align: left;
            margin-left: 400pt
        }
        input {
            width: 500px;
            height: 30px
        }
        .required:after {content:"*";color:red;}
        label {
            margin-top: 10px;
        }
        p {
            color: Maroon;
        }
    title= message
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous")

body(style="text-align:center;")
    h1 Write a Message

    nav
        a(href='/test/login' style="margin-right: 20px") Log in
        a(href=`/test/item/${ad.id}` style="margin-left: 20px") Back

    hr

    - if(messages.error)
        p= messages.error
    - if(errors !== undefined)
        p= errors.message

    span Advertisement: #{ad.title}

    form(action=`/test/message/${ad.id}` method='POST')
        div
            label.required
                i Your Name
            br
            input(type='text' id='name' name='name')
        div
            label.required
                i Your Email
            br
            input(type='email' id='email' name='email')
        div
            label.required
                i Your Message
            br
            textarea(id='message' name='message' style="width:500px; height:200px")
        div
            input(type='submit' value='Send' style="margin-top: 20px;")