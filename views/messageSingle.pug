head
    style.
        h1 {
            text-align: center;
            color: DarkCyan;
        }
        span {
            position: absolute;
            right: 100px;
            font-size: 15pt;
        }
        img {
            height: 90px;
            padding-top: 5px;
            padding-right: 5px;
            border-radius: 50%;
        }
        nav {
            text-align: center;
        }
        .hover {
            color: grey;
        }
        .hover:hover {
            color: DodgerBlue;
        }
        i {
            margin-left: 10px
        }
        .parentDiv {
            width: 400px;
            margin-left: 560px;
            text-align: left
        }
        .leftDiv {
            display: inline-block;
            width: 70px
        }
        .rightDiv {
            border: solid 0.1pt black;
            display: inline-block;
            margin-bottom: 5px;
            width: 320px
        }
        label {
            margin-right: 5px
        }
    title= messagesUser
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous")

body(style="text-align:center;")
    h1 Message
        span
            - if(user.image)
                img(src=`/uploads/profile/${user.image}` alt="Image")
            - else
                img(src='/uploads/profile/profile.jpeg')
            a.hover(href='/profile') #{user.name}

    nav
        a(href='/logout' style="margin-right: 20px") Logout
        a(href=`/user/messages` style="margin-left: 20px") Back

    hr

    div.parentDiv
        each el in message.messages
            -if(el.name === user.name)
                div.leftDiv me
            - else
                div.leftDiv #{el.name}
            div.rightDiv #{el.message}

    br
    form(action=`/user/messages/${message.id}` method='POST')
        div
            br
            textarea(id='message' name='message' style="width:500px; height:200px")
        div
            input(type='submit' value='Reply' style="margin-top: 20px;")